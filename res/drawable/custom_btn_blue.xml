<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="#005090" />

            <gradient android:angle="-90" android:endColor="#66abe2" android:startColor="#00457c" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="#005090" />

            <solid android:color="#1981d3" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="#005090" />

            <gradient android:angle="-90" android:endColor="#1981d3" android:startColor="#7fb9e7" />
        </shape></item>

</selector>