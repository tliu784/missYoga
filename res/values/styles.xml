<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="btnStyleBeige" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5d6153</item>
        <item name="android:gravity">left</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/mainpage_content_title</item>
        <item name="android:padding">5dip</item>
    </style>

    
    <style name="roundcorner">
         <item name="android:background">@drawable/round_corner</item>
    </style>
    
    <style name="contentfield">
        <item name="android:textSize">14sp</item>
        <item name="android:height">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5d6153</item>
        <item name="android:gravity">left</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@color/text_shadow_white</item>
        <item name="android:padding">5dip</item>
        <item name="android:paddingBottom">10sp</item>
    </style>
    
    <style name="loginDialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rect_text_edit</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="profile_textview">
        <item name="android:textSize">@dimen/profile_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="profile_edittext">
        <item name="android:textSize">@dimen/profile_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        
        <!--   before user clicking "edit", the underline is transparent, 
        which looks like the text box is not editable
        this property should be changed after user clicking "edit"
        <item name="android:background">@android:color/transparent</item>
         -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:ems">10</item>
    </style>
    
    <style name="btnStyleBlue" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_btn_blue</item>
       <item name="android:padding">10dip</item>
   </style>

</resources>