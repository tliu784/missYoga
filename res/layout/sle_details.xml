<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/gen_page_margin_top"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/chart_area_all"
        android:layout_width="fill_parent"
        android:layout_height="340dip"
        android:background="@drawable/textlines"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <!-- trends chart section -->

        <FrameLayout
            android:id="@+id/chart_area"
            android:layout_width="fill_parent"
            android:layout_height="270dip"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="25dp" >

            <LinearLayout
                android:id="@+id/detail_hr_graph"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_act_graph"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" >
            </LinearLayout>
        </FrameLayout>

        <!-- title section -->

        <LinearLayout
            android:id="@+id/detail_title_section"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal|top"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <Button
                android:id="@+id/chart_double_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/chart_double_prev"
                android:textStyle="bold" />

            <Button
                android:id="@+id/chart_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/chart_prev"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxLines="2"
                android:scrollbars="vertical"
                android:text="@string/text1"
                android:textSize="@dimen/profile_text_size"
                android:textStyle="bold" >
            </TextView>

            <Button
                android:id="@+id/chart_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/chart_next"
                android:textStyle="bold" />

            <Button
                android:id="@+id/chart_double_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/chart_double_next"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- icon and data section -->

        <LinearLayout
            android:id="@+id/detail_value_section"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="250dp" >

            <LinearLayout
                android:id="@+id/detail_value_section_left"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:id="@+id/chart_textView_hr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_indicator_new_pink"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:text="@string/hr"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/chart_values_hr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:id="@+id/chart_textView_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_indicator_new_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:text="@string/sleep"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/chart_values_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/chart_textView_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_indicator_new_green"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:text="@string/activity"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/chart_values_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_value_section_right"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/chart_textView_bp_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_indicator_new_purple"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:text="@string/bp_high"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/chart_values_bp_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/chart_textView_bp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_indicator_new_orange"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:text="@string/bp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/chart_values_bp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:scrollbars="vertical"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- tag section -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/gen_page_margin_left"
            android:layout_marginRight="@dimen/gen_page_margin_right"
            android:layout_marginTop="@dimen/gen_page_margin_bottom"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/trends_tag"
                style="@style/loginDialog"
                android:layout_width="@dimen/trends_tag_box_width"
                android:layout_height="@dimen/home_tag_box_height"
                android:layout_marginRight="@dimen/gen_page_margin_right"
                android:layout_marginTop="@dimen/gen_page_margin_top"
                android:hint="Tag here"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingBottom="2dp"
                android:paddingTop="0dp" />

            <Button
                android:id="@+id/trends_tag"
                style="@style/homeBtnStyle"
                android:layout_width="@dimen/trends_tag_btn_width"
                android:layout_height="@dimen/home_tag_box_height"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="@string/home_tag" />
        </LinearLayout>
    </FrameLayout>
    <!-- notes section -->

    <LinearLayout
        android:id="@+id/history_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"
                android:paddingTop="5dp"
                android:text="Event List"
                android:textSize="16dp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/category_filter_button"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:scrollbars="vertical"
                android:textSize="16dp"
                android:textStyle="bold" >
            </TextView>

            <!-- filters -->

            <GridLayout
                android:id="@+id/filter_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="80dp"
                android:background="@drawable/textlines"
                android:layout_marginRight="5dp"
                android:columnCount="7"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/all_event_filter"
                    style="@style/chart_tab_textbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:text="ALL "
                    android:textSize="14dp"
                    android:textStyle="bold">
                </TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/note_event_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_action_event"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:scrollbars="vertical"
                    android:text=""
                    android:textSize="14dp"
                    android:textStyle="bold" >
                </TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/rec_event_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_rec"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:scrollbars="vertical"
                    android:text=""
                    android:textSize="14dp"
                    android:textStyle="bold" >
                </TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/reminder_event_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_action_alarms_small"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:scrollbars="vertical"
                    android:text=""
                    android:textSize="14dp"
                    android:textStyle="bold" >
                </TextView>
            </GridLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollHistorySection"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/recordListSection"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/gen_page_margin_top"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>