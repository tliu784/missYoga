<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gen_page_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/gen_page_margin_top"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/textlines"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/large_font_size" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dialog_icon_bp"
                android:text=" Blood Pressure "
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/bp_unit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" mmHg "
                android:textColor="@color/grey" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/bp"
            style="@style/contentfield"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/font_size" >

            <TextView
                android:id="@+id/bp_color"
                android:layout_width="8dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="#01DF01" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bp_systolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" SYSTOLIC "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/bp_systolic_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 115 "
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" 
                    android:background="#DF0101"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bp_diastolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" DIASTOLIC "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/bp_diastolic_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 160 "
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bp_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" 09/11/2014 "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/bp_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" 11:20 AM "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />
            </LinearLayout>
        </LinearLayout>

        <!-- hr -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/font_size" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dialog_icon_hr"
                android:text=" Heart Rate "
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/hr_unit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" bmp "
                android:textColor="@color/grey" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/hr"
            style="@style/contentfield"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/font_size" >

            <TextView
                android:id="@+id/hr_color"
                android:layout_width="8dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="#DF0101" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/hr_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" LAST "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/hr_last_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 77 "
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/hr_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  AVERAGE "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/hr_average_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 80 "
                    android:textColor="@color/red"
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/hr_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" 09/11/2014 "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/hr_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" 11:20 AM "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />
            </LinearLayout>
        </LinearLayout>

        <!-- sleep -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/font_size" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dialog_icon_sleep"
                android:text=" Sleep "
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sle_unit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" hrs "
                android:textColor="@color/grey" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/sle"
            style="@style/contentfield"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/font_size" >

            <TextView
                android:id="@+id/sle_color"
                android:layout_width="8dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="#01DF01" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sle_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" HOURS "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/sle_hours_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 6.5 "
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sle_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" EFFICIENCY "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/sle_hours_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4 "
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sle_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" 09/11/2014 "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/sle_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" 11:20 AM "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />
            </LinearLayout>
        </LinearLayout>

        <!-- activity -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/font_size" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dialog_icon_activity"
                android:text=" Activity "
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/act_unit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" km "
                android:textColor="@color/grey" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/act"
            style="@style/contentfield"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/gen_page_margin_bottom"
            android:textSize="@dimen/font_size" >

            <TextView
                android:id="@+id/act_color"
                android:layout_width="8dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="#01DF01" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/act_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" DISTANCE "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/act_distance_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4.5 "
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/act_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" CALORIE "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/bp_diastolic_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 250 "
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin" >

                <TextView
                    android:id="@+id/act_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" 09/11/2014 "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />

                <TextView
                    android:id="@+id/act_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" 11:20 AM "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_font_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- reminder section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines"
        android:orientation="vertical" 
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/font_size" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dialog_icon_about"
                android:text=" Reminder "
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/rd_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" medicine "
                android:textColor="@color/grey" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/rd"
            style="@style/contentfield"
            android:layout_width="fill_parent"
            android:layout_height="70sp"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/font_size" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" TASK "
                    android:textColor="@color/grey"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/rd_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" ASPRIN "
                    android:textSize="@dimen/msmall_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/rd_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 09/11/2014 "
                    android:textColor="@color/grey"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rd_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 11:20 AM "
                    android:textColor="@color/grey"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- recommendation section -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" 
            android:background="@drawable/textlines" >

            <Button
                android:id="@+id/rec"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@color/light_grey"
                android:clickable="true"
                android:gravity="left"
                android:onClick="toggle_recom_box"
                android:text=" Recommendation: "
                android:textColor="@color/light_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rec_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:text="Health is the level of functional or metabolic efficiency of a living organism."
                android:textColor="@color/grey"
                android:textSize="18dp" />
        </LinearLayout>

</LinearLayout>